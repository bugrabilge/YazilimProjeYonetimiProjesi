@model EntityLayer.Concrete.Users
@{
    Layout = Constants.SetLayout();
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="/css/ui-login.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="box">
        <span class="borderLine"></span>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h2>Log in 🤖</h2>
                <div style="color:#ffffff">@ViewBag.Log</div>
                <div class="inputBox">
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div style="color:#ffffff">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new {})
                        <div>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <i></i>
                </div>

                <div class="inputBox">
                    <div style="color:#ffffff">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new {})
                        <div>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <i></i>
                </div>
                <br>
                <div>
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</body>
</html>
