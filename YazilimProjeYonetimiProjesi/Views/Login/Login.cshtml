<link rel="stylesheet" href="~/lib/bootstrap/dist/css/design.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@model EntityLayer.Concrete.Users
@{
    Layout = Constants.SetLayout();
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="registration">
        <h2>🤖 Please Login</h2>
        <div>@ViewBag.Log</div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2", style = "color: #555; font-weight: bold;"  })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" , style = "background-color: #f2f2f2; border-color: #ddd; color: #555; padding: 6px; border-radius: 5px;"} })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", style = "color: #555; font-weight: bold;"  })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "background-color: #f2f2f2; border-color: #ddd; color: #555; padding: 6px; border-radius: 5px;" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "font-size: 12px; margin-top: 5px;"  })
            </div>
        </div>


        <div class="pure-material-button-contained">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </div>
    </div>
}
